<UserControl x:Class="ARK_Server_Manager.ServerDetailBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ARK_Server_Manager"
             mc:Ignorable="d" Height="95.006" Width="489.055">
    <Border BorderBrush="{DynamicResource MasterComp_Brush}" BorderThickness="1" Margin="-1.096,-0.731,0,0" Background="{DynamicResource DarkNeutralFade_Brush}" d:LayoutOverrides="LeftPosition, RightPosition">
        <Grid Margin="9">
            <StackPanel HorizontalAlignment="Left" Height="17.637" Orientation="Horizontal" VerticalAlignment="Top">
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Server Profile:" FontFamily="{DynamicResource DefaultFont}" FontWeight="Bold" d:LayoutOverrides="TopPosition, BottomPosition" Width="89.652" Foreground="{DynamicResource TextLight_Brush}"/>
                <TextBlock x:Name="textBlock_Copy" TextWrapping="Wrap" Text="[server name]" FontFamily="{DynamicResource DefaultFont}" d:LayoutOverrides="TopPosition, BottomPosition" Foreground="{DynamicResource TextLight_Brush}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
